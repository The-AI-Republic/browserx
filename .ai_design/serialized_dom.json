{
  "page": {
    "context": {
      "url": "https://example.com",
      "title": "Sample Page"
    },
    "body": {
      "id": "node_0",
      "children": [
        {
            "id": "node_3",
            "tag": "a",
            "role": "link",
            "aria-label": "Home",
            "text": "Home",
            "href": "/",
            "inViewport": true
        },
        {
            "id": "node_4",
            "tag": "a",
            "role": "link",
            "aria-label": "About",
            "text": "About",
            "href": "/about",
            "inViewport": true
        },
        {
            "id": "node_6",
            "tag": "h1",
            "text": "Welcome"
        },
        {
            "id": "node_7",
            "tag": "p",
            "text": "This is a sample page."
        },
        { // since forms are important for interaction, we keep the form structure, not totally flattened
            "id": "node_8",
            "tag": "form",
            "children": [
            {
                "id": "node_9",
                "tag": "label",
                "text": "Name:"
            },
            {
                "id": "node_10",
                "tag": "input",
                "role": "textbox",
                "aria-label": "Name:",
                
                "placeholder": "Enter your name",
                "inViewport": true
            },
            {
                "id": "node_11",
                "tag": "button",
                "role": "button",
                "aria-label": "Submit",
                "text": "Submit",
                
                "inViewport": true
            }
            ]
        }
        // footer can be omitted if there is no clickable or important content
      ]
    }
  }
}

///////////////////
