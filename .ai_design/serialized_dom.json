          { "id": "node_3", "tag": "h1", "text": "Welcome" },
          { "id": "node_4", "tag": "p", "text": "This is a sample page." },
          {
            "id": "node_5",
            "tag": "form",
            "children": [
              { "id": "node_6", "tag": "label", "text": "Name:" },
              { "id": "node_7", "tag": "input", "role": "textbox", ... },
              { "id": "node_8", "tag": "button", "text": "Submit" }
            ]
          }
        ]
      }
    }
  }
